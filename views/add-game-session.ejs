<%- include ('partials/header.ejs') %>

<h1>Add game session</h1>

<form method="POST" action="/add-game-session">
    <label for="game_id">Game:</label>
    <select name="game_id" id="game_id">
        <% for (var i = 0; i < games.length; i++) { %>
            <option value="<%= games[i].game_id %>"><%= games[i].game_name %></option>
        <% } %>
    </select><br><br>

    <label for="startDate">Start date:</label>
    <input type="datetime-local" name="startDate" id="startDate" required><br><br>
    <input type="submit" value="Add Game Session">
</form>

